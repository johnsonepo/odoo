<?xml version="1.0"?>
<odoo>
  <record id="product_template_form_view_inherit" model="ir.ui.view">
    <field name="name">product.product_template.form.allow_ads_settings</field>  <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <notebook position="inside">
          <page string="Allow ads settings" name="allow_ads_settings">
          <group string="Ads Settings" name="ads_settings">
              <field name="allow_facebook_ads">Allow Facebook ads </field>
              <field name="allow_google_ads">Allow Google ads</field>
              <field name="allow_snapchat_ads">Allow Snapchat ads</field>
          </group>
              <a href="/product_data/facebook-feed.xml" target="_blank" style="display: block; width: 100%;"> See Facebook Feed </a>
        </page>
      </notebook>
    </field>
  </record>

</odoo>
